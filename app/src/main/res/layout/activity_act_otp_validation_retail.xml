<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".Activity.retail.act_otp_validation_retail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kami sedang mengirim kode OTP \nke e-mail :"
            android:textColor="#000"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:hint="alamatemailanda@gmail.com"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:background="@drawable/gbr_otp_validation">
        </ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cek email dari kami, lalu sertakan \nkode OTP dibawah ini ya"
        android:textColor="#000"
        android:textAlignment="center">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/satu"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rt_bt_form"
            android:textAlignment="center"
            android:maxLength="1"
            android:focusable="true"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:textSize="30dp"
            android:textColor="#FF661B"
            android:textStyle="bold">
        </EditText>
        <EditText
            android:id="@+id/dua"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rt_bt_form"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:textSize="30dp"
            android:textColor="#FF661B"
            android:textStyle="bold">
        </EditText>
        <EditText
            android:id="@+id/tiga"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rt_bt_form"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:textSize="30dp"
            android:textColor="#FF661B"
            android:textStyle="bold">
        </EditText>
        <EditText
            android:id="@+id/empat"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rt_bt_form"
            android:textAlignment="center"
            android:maxLength="1"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:textSize="30dp"
            android:textColor="#FF661B"
            android:textStyle="bold">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Selanjutnya"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/rt_bt_tertiary">
        </Button>
    </LinearLayout>

</LinearLayout>