<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/gambar"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/circular"></com.google.android.material.imageview.ShapeableImageView>

                <ImageView
                    android:id="@+id/fav"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rt_ic_fav_off"></ImageView>
                <RelativeLayout
                    android:id="@+id/disc"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/rt_bt_secondary">
                    <TextView
                        android:id="@+id/disc_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Disc 10%"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:visibility="visible">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/kategori_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="8dp"
                android:text="Kategori Barang"
                android:textColor="#FFC62A"
                android:fontFamily="@font/overpass_regular">
            </TextView>
            <TextView
                android:id="@+id/nama_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="Nama Barang Ukuruan Barang Berat Barang"
                android:textSize="16sp"
                android:textColor="#000"
                android:fontFamily="@font/overpass_regular">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">
                <TextView
                    android:id="@+id/harga_barang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF661B"
                    android:fontFamily="@font/overpass_regular">
                </TextView>
                <RelativeLayout
                    android:id="@+id/harga_disc"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:visibility="visible"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/harga_disc_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 10.000"
                        android:textColor="#FF661B"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/overpass_regular">
                    </TextView>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:background="#000"
                        android:layout_centerInParent="true">
                    </View>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/berat_brg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/volume_brg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>