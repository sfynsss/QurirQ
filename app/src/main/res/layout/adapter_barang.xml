<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true">
                </ImageView>
                <RelativeLayout
                    android:id="@+id/disc"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/rt_bt_secondary">
                    <TextView
                        android:id="@+id/disc_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Disc 10%"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:visibility="visible">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/kategori_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="8dp"
                android:text="Kategori Barang"
                android:textColor="#FFC62A">
            </TextView>
            <TextView
                android:id="@+id/nama_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Nama Barang Ukuruan Barang"
                android:textSize="16sp"
                android:textColor="#000">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:weightSum="10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/harga_barang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Rp100"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF661B">
                </TextView>
                <RelativeLayout
                    android:id="@+id/harga_disc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/harga_disc_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Rp 10.000"
                        android:textAlignment="center"
                        android:visibility="visible">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.25dp"
                        android:background="#000"
                        android:layout_centerInParent="true">
                    </View>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>