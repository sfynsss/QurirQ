<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".Activity.retail.act_detail_transaksi">

    <!-- HEADER START -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rt_main_header"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_back_gbr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="23dp"
                android:text="Detail Transaksi"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <!-- HEADER END -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="#FFF"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Nomor Transaksi">
        </TextView>
        <TextView
            android:id="@+id/no_ent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12345678910"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#090F47">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Tanggal Transaksi"
                android:gravity="center_vertical">
            </TextView>
            <TextView
                android:id="@+id/tgl_transaksi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="12.12.2020"
                android:textColor="#090F47"
                android:textStyle="bold"
                android:gravity="center_vertical|end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Waktu Transaksi"
                android:gravity="center_vertical">
            </TextView>
            <TextView
                android:id="@+id/waktu_transaksi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="11.41"
                android:textColor="#090F47"
                android:textStyle="bold"
                android:gravity="center_vertical|end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Jasa Pengiriman"
                android:gravity="center_vertical">
            </TextView>
            <TextView
                android:id="@+id/pengiriman"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="LaRisso COD"
                android:textColor="#090F47"
                android:textStyle="bold"
                android:gravity="center_vertical|end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_ongkir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Ongkos Kirim"
                android:gravity="center_vertical">
            </TextView>
            <TextView
                android:id="@+id/ongkir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Rp.100"
                android:textColor="#090F47"
                android:textStyle="bold"
                android:gravity="center_vertical|end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_potongan_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Potongan Voucher"
                android:gravity="center_vertical">
            </TextView>
            <TextView
                android:id="@+id/potongan_voucher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Rp.100"
                android:textColor="#090F47"
                android:textStyle="bold"
                android:gravity="center_vertical|end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Status Pembayaran"
                android:gravity="center_vertical">
            </TextView>
            <TextView
                android:id="@+id/sts_byr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Berhasil"
                android:textColor="#47D764"
                android:textStyle="bold"
                android:gravity="center_vertical|end">
            </TextView>
        </LinearLayout>

        <Button
            android:id="@+id/lacak_pesanan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:text="Lacak Pesanan"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:background="#47D764">
        </Button>

        <TextView
            android:id="@+id/batalkan_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batalkan pesanan?"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#FD7468"
            android:visibility="visible">
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/list_barang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Total Transaksi" />
        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rp.100"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>