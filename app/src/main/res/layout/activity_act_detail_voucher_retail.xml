<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.retail.act_detail_voucher_retail">

    <!-- HEADER START -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@drawable/rt_main_header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back_gbr"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Voucher"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginLeft="23dp"
                android:layout_gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/gambar_voucher"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Nama Voucher"
                android:textSize="18dp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/nama_voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Nama Voucher"
                android:textSize="22dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Deskripsi Voucher"
                android:textSize="18dp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/deskripsi_voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Isi deskripsi voucher"
                android:textSize="18dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Berlaku Mulai"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Berlaku Hingga"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2">
                <TextView
                    android:id="@+id/tgl_mulai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12/12/2020"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:id="@+id/tgl_berakhir"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12/12/2020"
                    android:textSize="18dp">
                </TextView>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="40dp"
                android:text="Gunakan Voucher"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rt_bt_secondary">
            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- HEADER END -->



</LinearLayout>