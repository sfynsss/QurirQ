<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.retail.frm_user">

    <!-- HEADER START -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="2"
        android:background="@drawable/rt_main_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Anda"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sub Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Akun Saya"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">
            </TextView>
            <!-- Profil Pengguna -->
            <LinearLayout
                android:id="@+id/btn_pengguna"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:background="@drawable/ic_profil_person">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|bottom"
                        android:text="Profil Pengguna">
                    </TextView>
                    <TextView
                        android:id="@+id/nama_pengguna"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="namapengguna"
                        android:textStyle="bold"
                        android:gravity="center_vertical|top">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <!-- Alamat Pengantaran Pengguna -->
            <LinearLayout
                android:id="@+id/btn_alamat"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/ic_profil_alamat">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|bottom"
                        android:text="Alamat Pengantaran">
                    </TextView>
                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textStyle="bold"
                        android:gravity="center_vertical|top">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <Button
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_arrow_right">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <!-- Alamat Pengantaran Pengguna -->
            <LinearLayout
                android:id="@+id/btn_outlet"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="10dp"
                        android:background="#EAEAEA">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|bottom"
                        android:text="Outlet Saat Ini">
                    </TextView>
                    <TextView
                        android:id="@+id/outlet"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="nama_outlet"
                        android:textStyle="bold"
                        android:gravity="center_vertical|top">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <Button
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_arrow_right">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <!-- Sub Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Transaksi Anda"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">
            </TextView>
            <!-- Sub Judul -->
            <LinearLayout
                android:id="@+id/btn_transaksi"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/ic_profil_transaksi">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Transaksi Belanja Anda"
                        android:gravity="center_vertical">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <Button
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_arrow_right">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <!-- Sub Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Voucher dan Point"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">
            </TextView>
            <!-- Sub Judul -->
            <LinearLayout
                android:id="@+id/btn_voucher"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/ic_profil_voucher">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Halaman Voucher"
                        android:gravity="center_vertical">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <Button
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_arrow_right">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <!-- Sub Judul -->
            <LinearLayout
                android:id="@+id/btn_point"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/ic_profil_point">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Point Anda"
                        android:gravity="center_vertical">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <Button
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_arrow_right">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <!-- Sub Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Lainnya"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">
            </TextView>
            <!-- Sub Judul -->
            <LinearLayout
                android:id="@+id/btn_customerservice"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/ic_profil_cs">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Larisso Customer Service"
                        android:gravity="center_vertical">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:weightSum="10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/ic_logout">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Logout"
                        android:textStyle="bold"
                        android:gravity="center_vertical">
                    </TextView>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!-- HEADER END -->

</LinearLayout>