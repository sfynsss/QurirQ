<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".Activity.retail.act_register_retail">

    <!-- HEADER START -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="2"
        android:background="@drawable/rt_main_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halaman Pendaftaran"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>
    <!-- HEADER END -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/ly_section_ic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_profil_person">
                </ImageView>
                <TextView
                    android:id="@+id/ly_section_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ly_section_ic"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Informasi Pribadi"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:textStyle="bold">
                </TextView>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Isikan kolom dibawah ini sesuai dengan identitas diri.">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Pastikan isi secara lengkap dan benar.">
            </TextView>
            <!--Nama Lengkap-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Nama Lengkap"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Isikan nama lengkap"
                android:textSize="14sp"
                android:maxLength="50"
                android:inputType="textCapWords"
                android:imeOptions="actionDone">
            </EditText>
            <!--Jenis Kelamin-->
            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Jenis Kelamin"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp">
                <Spinner
                    android:id="@+id/jenis_kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>
            -->
            <!--Tanggal Lahir-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Tanggal Lahir"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Contoh : 2021-12-31"
                android:textSize="14sp"
                android:inputType="datetime"
                android:imeOptions="actionDone">
            </EditText>
            <!--Email-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Email"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Isikan alamat email"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext">
            </EditText>
            <!--Email-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Alamat"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Masukkan alamat rumah anda"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionNext">
            </EditText>
            <!--Nomor Telepon-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Nomor Telepon"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/no_telp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:hint="Isikan nomor telepon"
                android:textSize="14sp"
                android:maxLength="14"
                android:inputType="number"
                android:imeOptions="actionNext">
            </EditText>
            <!--Nomor Telepon-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Kata Sandi"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:layout_marginLeft="16dp"
                    android:hint="Buat kata sandi"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone">
                </EditText>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginRight="16dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/show_password"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_eye_open_24">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="Daftar Sekarang"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="#FF971E">
            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/progress_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                </ProgressBar>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>