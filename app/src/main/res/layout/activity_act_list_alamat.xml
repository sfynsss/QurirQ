<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.retail.act_list_alamat">

    <!-- HEADER START -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:background="@drawable/rt_main_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Alamat"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp">
        </TextView>
    </RelativeLayout>
    <!-- HEADER END -->

    <RelativeLayout
        android:id="@+id/alamat_ada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@id/divider"
        android:visibility="visible">
        <TextView
            android:id="@+id/tx_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Pilih salah satu alamat pengiriman berikut">
        </TextView>
        <ListView
            android:id="@+id/list_alamat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:divider="#FFF"
            android:dividerHeight="8dp"
            android:layout_below="@id/tx_1"
            tools:listitem="@layout/adapter_alamat">
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alamat_kosong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@id/divider"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Alamat pengiriman tidak ditemukan \nSilahkan tambah alamat pengiriman"
            android:textStyle="italic">
        </TextView>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/footer"
        android:background="#EAEAEA">
    </View>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#FFF">
        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rt_bt_secondary"
            android:text="Tambah Alamat Pengiriman"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FFF">
        </Button>
    </RelativeLayout>

</RelativeLayout>